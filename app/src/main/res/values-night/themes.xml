<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Theme (Dark) -->
    <style name="Theme.Stockbroker.Splash" parent="Theme.Stockbroker.NoActionBar">
        <!-- Dark background -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/nave_logo_2</item>
        <item name="android:windowBackground">@color/black</item>
        <!-- Optional: hide status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Stockbroker.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>