<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stockbroker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/secondary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_blue</item>
        <item name="colorSecondaryVariant">@color/gray_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash Theme (Light) -->
    <style name="Theme.Stockbroker.Splash" parent="Theme.Stockbroker.NoActionBar">
        <!-- Background color -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Optional: hide status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Stockbroker.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.Stockbroker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Stockbroker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>